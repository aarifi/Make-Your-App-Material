<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.xyzreader.ui.activity.ArticleDActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_details"
            android:layout_width="match_parent"
            android:layout_height="250dp"
             android:scaleType="centerCrop"
            android:transitionName="@string/transition_photo_article" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title_details"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/controle_16dp"
                android:layout_marginRight="@dimen/controle_16dp"
                android:layout_marginTop="@dimen/controle_16dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="24sp"
                tools:text="@string/title_details_string" />

            <TextView
                android:id="@+id/article_byline"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/controle_16dp"
                android:layout_marginLeft="@dimen/controle_16dp"
                android:layout_marginRight="@dimen/controle_16dp"
                android:textSize="12sp"
                tools:text="Vincent Van Gogh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_body_details"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/controle_16dp"
                android:lineSpacingExtra="7dp"
                tools:text="@string/test_text" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
